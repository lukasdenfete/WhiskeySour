@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            
            <div class="text-center mb-4">
                <h1 class="h3 mb-3 fw-normal">@ViewData["Title"]</h1>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">
                    
                    <section>
                        <form id="account" method="post">
                            <h2 class="h5 mb-3 text-muted">Use a local account</h2>
                            
                            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe" class="form-label text-muted">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>

                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark mb-3">Log in</button>
                            
                            <div class="text-center">
                                <p class="mb-1">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none text-muted small">Forgot your password?</a>
                                </p>
                                <p class="mb-1">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none text-muted small">Register as a new user</a>
                                </p>
                            </div>
                        </form>
                    </section>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <hr class="my-4 text-muted">
                        
                        <section>
                            <h3 class="h6 text-center text-muted mb-3">Or sign in with</h3>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                        @provider.DisplayName
                                    </button>
                                }
                            </form>
                        </section>
                    }
                </div>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                 <div class="text-center mt-3 text-muted small">
                     No external authentication services configured.
                 </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}