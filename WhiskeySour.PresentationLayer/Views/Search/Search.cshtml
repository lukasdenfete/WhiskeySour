@model WhiskeySour.Web.ViewModels.SearchViewModel

<h2 class="d-flex justify-content-center my-4">Search results for "@Model.Query"</h2>
<div class="d-flex justify-content-center">
    @if (!Model.Products.Any() && !Model.Users.Any())
    {
        <div class="alert alert-info">
            <p class="mb-0">No results matched the search query.</p>
        </div>
    }
    else
    {
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h4 class="mb-3">Products</h4>
                    
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-3">
                        @foreach (var product in Model.Products)
                        {
                            <div class="col">
                                <div class="card card-hover h-100 shadow-sm border-0">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="text-decoration-none text-reset">
                                        <div style="position: relative;">
                                            @if (product.Image != null)
                                            {
                                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(product.Image)" 
                                                     class="card-img-top" 
                                                     alt="@product.Name"
                                                     style="height: 180px; object-fit: cover;"/>
                                            }
                                            else
                                            {
                                                <img src="~/images/placeholder.jpeg" 
                                                     class="card-img-top" 
                                                     alt="No image available"
                                                     style="height: 180px; object-fit: cover;"/>
                                            }
                                            
                                            <div style="position: absolute; top: 10px; right: 10px;">
                                                @if (product.Quantity >= 3)
                                                {
                                                    <span class="badge bg-success shadow-sm">In Stock</span>
                                                }
                                                else if (product.Quantity < 3 && product.Quantity > 0)
                                                {
                                                    <span class="badge bg-warning text-dark shadow-sm">Few Left</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger shadow-sm">Out of Stock</span>
                                                }
                                            </div>
                                        </div>
                                    </a>

                                    <div class="card-body d-flex flex-column p-3">
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="text-decoration-none text-reset">
                                            <h6 class="card-title fw-bold mb-1 text-truncate" title="@product.Name">
                                                @product.Name
                                            </h6>
                                            <p class="card-text small text-muted text-truncate mb-3">
                                                @product.Category.Name
                                            </p>
                                        </a>
                                        
                                        <div class="mt-auto d-flex justify-content-between align-items-center">
                                            <span class="fw-bold">
                                                @product.Price.ToString("C")
                                            </span>

                                            @if (product.Quantity > 0)
                                            {
                                                <form asp-controller="Cart" asp-action="Add" method="post">
                                                    <input type="hidden" name="productId" value="@product.ProductId" /> 
                                                    <button type="submit" class="btn btn-outline-dark btn-sm" title="Add to cart">
                                                        <i class="bi bi-cart-plus fs-5"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <button class="btn btn-light text-muted border-0 btn-sm" disabled>
                                                    <i class="bi bi-cart-x fs-5"></i>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="col-md-4">
                    <h4 class="mb-3 mt-4 mt-md-0">Users</h4> @foreach (var user in Model.Users)
                    {
                        <a asp-controller="Profile" asp-action="Details" asp-route-id="@user.UserId" class="text-decoration-none text-reset">
                            <div class="card mb-3 border shadow-sm">
                                <div class="row g-0 align-items-center p-2">
                                    <div class="col-auto">
                                        @if (user.ProfilePicture != null)
                                        {
                                            <img src="data:image/png;base64,@Convert.ToBase64String(user.ProfilePicture)" 
                                                 class="rounded-circle border" 
                                                 style="height: 60px; width: 60px; object-fit: cover;" 
                                                 alt="@user.FirstName"/>
                                        }
                                        else
                                        {
                                            <img src="/images/default-profilbild.png" 
                                                 class="rounded-circle border" 
                                                 style="height: 60px; width: 60px; object-fit: cover;" 
                                                 alt="No profile image"/>
                                        }
                                    </div>
                                    <div class="col">
                                        <div class="card-body p-2">
                                            <h6 class="card-title mb-0">@user.FirstName @user.LastName</h6>
                                            <small class="text-muted">View profile</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>