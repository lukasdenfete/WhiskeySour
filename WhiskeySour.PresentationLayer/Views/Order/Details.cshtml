@model WhiskeySour.Web.ViewModels.OrderViewModel

<div class="container mt-5 mb-5">
    
    <div class="mb-4">
        <a asp-action="Index" class="text-decoration-none btn btn-dark">
            <i class="bi bi-arrow-left"></i> Back to My Orders
        </a>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
        <h2>Order #@Model.OrderId</h2>
        <span class="badge bg-success fs-6">@Model.Status</span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h5 class="text-muted mb-3">Shipping Details</h5>
            <div class="p-3 bg-light rounded mb-4">
                <strong>@Model.CustomerName</strong><br/>
                @Model.Address<br/>
                @Model.City<br/>
                <span class="text-muted small">Placed on: @Model.OrderDate</span>
            </div>
        </div>
        
        <div class="col-md-6">
            <h5 class="text-muted mb-3">Items</h5>
            <ul class="list-group mb-3 shadow-sm">
                @foreach (var item in Model.Items)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <div>
                                <h6 class="my-0">@item.ProductName</h6>
                                <small class="text-muted">Quantity: @item.Quantity</small>
                            </div>
                        </div>
                        <span class="text-muted">@item.RowTotal.ToString("C")</span>
                    </li>
                }
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <span class="fw-bold">Total</span>
                    <strong class="fs-5">@Model.TotalPrice.ToString("C")</strong>
                </li>
            </ul>
        </div>
    </div>
</div>