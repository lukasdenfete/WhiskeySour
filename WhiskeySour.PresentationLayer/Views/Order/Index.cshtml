@model IEnumerable<WhiskeySour.Web.ViewModels.OrderViewModel>

<div class="container mt-5 mb-5">
    <h2 class="mb-4">Order History</h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-3">
            <i class="bi bi-box-seam fs-1 text-muted mb-3"></i>
            <h3>You haven't placed any orders yet.</h3>
            <p class="text-muted">Once you make a purchase, it will show up here.</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-dark mt-3">Start Shopping</a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded border">
            <table class="table align-middle mb-0 bg-white">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3 ps-4">Order #</th>
                        <th class="py-3">Date</th>
                        <th class="py-3">Items</th>
                        <th class="py-3">Total</th>
                        <th class="py-3">Status</th>
                        <th class="py-3 text-end pe-4">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">#@order.OrderId</td>
                            <td>@order.OrderDate</td>
                            <td>
                                @order.Items.Sum(i => i.Quantity) items
                            </td>
                            <td class="fw-bold">@order.TotalPrice.ToString("C")</td>
                            <td>
                                <span class="badge bg-success rounded-pill">@order.Status</span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-outline-dark btn-sm">
                                    View details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>