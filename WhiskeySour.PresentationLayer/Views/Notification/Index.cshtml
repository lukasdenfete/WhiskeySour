@using WhiskeySour.DataLayer
@model IEnumerable<WhiskeySour.Web.ViewModels.NotificationViewModel>

@{
    ViewData["Title"] = "Notifications";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 pt-4 pb-2 px-4 d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0 fw-normal">@ViewData["Title"]</h1>
                    @if (Model.Any(n => !n.IsRead))
                    {
                        <span class="badge bg-primary rounded-pill">@Model.Count(n => !n.IsRead) new</span>
                    }
                </div>

                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-bell-slash text-muted display-4 mb-3"></i>
                            <p class="text-muted">No notifications yet.</p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var notification in Model)
                            {
                                // Bestäm ikon och färg baserat på typ
                                string iconClass = notification.Type switch
                                {
                                    NotificationType.NewComment => "bi-chat-left-text-fill text-info",
                                    NotificationType.NewFollower => "bi-person-plus-fill text-success",
                                    NotificationType.NewMessage => "bi-envelope-fill text-warning",
                                    _ => "bi-card-heading text-primary" // Default (Thread)
                                };

                                // Olästa notiser får en svagt blå bakgrund istället för röd border
                                string unreadClass = !notification.IsRead ? "bg-body-tertiary fw-semibold" : "bg-white";
                                
                                <a asp-controller="Notification" asp-action="MarkAsRead" asp-route-id="@notification.Id" 
                                   class="list-group-item list-group-item-action p-3 d-flex gap-3 align-items-start @unreadClass"
                                   style="@(!notification.IsRead ? "background-color: #f8faff;" : "")">
                                    
                                    <div class="fs-4 mt-1">
                                        <i class="bi @iconClass"></i>
                                    </div>

                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                            <span class="small text-muted">@notification.CreatedAt.ToString("yyyy-MM-dd HH:mm")</span>
                                            @if (!notification.IsRead)
                                            {
                                                <i class="bi bi-circle-fill text-primary" style="font-size: 8px;"></i>
                                            }
                                        </div>

                                        <p class="mb-1 text-dark">
                                            @if (notification.Type == NotificationType.NewComment)
                                            {
                                                <span>New comment from <strong>@notification.FromUserName</strong></span>
                                            }
                                            else if (notification.Type == NotificationType.NewFollower)
                                            {
                                                <span><strong>@notification.FromUserName</strong> started following you!</span>
                                            }
                                            else if (notification.Type == NotificationType.NewMessage)
                                            {
                                                <span>New message from <strong>@notification.FromUserName</strong></span>
                                            }
                                            else
                                            {
                                                <span>New thread by <strong>@notification.FromUserName</strong></span>
                                            }
                                        </p>

                                        <p class="mb-0 text-muted small text-truncate" style="max-width: 380px;">
                                            @if (notification.Type == NotificationType.NewComment)
                                            {
                                                @: "@notification.CommentText"
                                            }
                                            else if (notification.Type == NotificationType.NewMessage)
                                            {
                                                @: "@notification.MessageText"
                                            }
                                            else if (notification.Type == NotificationType.NewThreadFromFollowee)
                                            {
                                                @: "@notification.ThreadTitle"
                                            }
                                        </p>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>