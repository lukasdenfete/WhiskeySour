@model List<WhiskeySour.Web.ViewModels.ForumViewModel>
@{
    ViewData["Title"] = "Forum";
}

<div class="container py-5">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Forum Discussions</h2>
            <p class="text-muted">Join the conversation.</p>
        </div>
        
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-dark px-4 rounded-pill" asp-controller="Forum" asp-action="Create">
                <i class="bi bi-plus-lg me-1"></i> New Thread
            </a>
        }
        else
        {
            <a class="btn btn-outline-dark px-4 rounded-pill" asp-area="Identity" asp-page="/Account/Login">
                Log in to post
            </a>
        }
    </div>

    <div class="card shadow-sm border-0">
        @if (Model != null && Model.Any())
        {
            <div class="list-group list-group-flush">
                @foreach (var thread in Model)
                {
                    <a asp-controller="Forum" asp-action="Details" asp-route-id="@thread.ThreadId" class="list-group-item list-group-item-action p-4 d-flex align-items-center justify-content-between gap-3 border-bottom">
                        
                        <div class="d-flex align-items-center gap-3">
                            
                            <div class="d-flex align-items-center justify-content-center rounded-circle bg-dark text-white" style="width: 45px; height: 45px;">
                                <i class="bi bi-chat-text fs-5"></i>
                            </div>

                            <div>
                                <h5 class="mb-1 fw-bold text-dark">@thread.ThreadTitle</h5>
                                <div class="text-muted small">
                                    <span class="me-3">
                                        <i class="bi bi-person-fill text-dark me-1"></i> @thread.CreatedByName
                                    </span>
                                    <span>
                                        <i class="bi bi-calendar3 text-dark me-1"></i> @thread.Created.ToString("yyyy-MM-dd")
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center px-3">
                            <span class="badge bg-dark rounded-pill px-3 py-2">
                                @thread.CommentCount replies
                            </span>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-chat-square text-muted" style="font-size: 3rem;"></i>
                </div>
                <h4 class="fw-bold">No discussions yet</h4>
                <p class="text-muted mb-4">Be the first to create a thread.</p>
                <a class="btn btn-outline-dark" asp-controller="Forum" asp-action="Create">Create Thread</a>
            </div>
        }
    </div>
</div>