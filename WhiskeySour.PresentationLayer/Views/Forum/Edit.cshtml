@model WhiskeySour.Web.ViewModels.EditThreadViewModel
<h2>Edit thread</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ThreadId" />
    <div class="form-group">
        <label asp-for="ThreadTitle">Title</label>
        <input asp-for="ThreadTitle" class="form-control"/>
        <span asp-validation-for="ThreadTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ThreadContent">Content</label>
        <textarea asp-for="ThreadContent" class="form-control" rows="5"></textarea>
        <span asp-validation-for="ThreadContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ImageFile">Upload picture</label>
        <input asp-for="ImageFile" type="file" name="ImageFile" class="form-control"/>
    </div>
    @if (Model.ExistingImage != null)
    {
        <p>Current image:</p>
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ExistingImage)" class="img-fluid mb-3" style="max-height: 300px;"/>
    }
    <br/>
    <div class="d-flex align-items-end">
        <button type="submit" class="btn btn-dark">Save changes</button>
        <a asp-action="Details" asp-route-id="@Model.ThreadId" class="btn btn-dark ms-2">Cancel</a>
    </div>
    </form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}