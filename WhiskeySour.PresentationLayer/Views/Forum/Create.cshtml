@model WhiskeySour.Web.ViewModels.CreateThreadViewModel
<h2>Create new thread</h2>

<form asp-controller="Forum" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ThreadTitle">Title</label>
        <input asp-for="ThreadTitle" class="form-control"/>
        <span asp-validation-for="ThreadTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ThreadContent">Content</label>
        <textarea asp-for="ThreadContent" class="form-control" rows="5"></textarea>
        <span asp-validation-for="ThreadContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ImageFile">Upload picture</label>
        <input type="file" name="ImageFile" class="form-control"/>
    </div>
    <button type="submit">Create</button>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}