@model WhiskeySour.Web.ViewModels.CreateThreadViewModel

@{
    ViewData["Title"] = "Create Thread";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">
                    
                    <h2 class="fw-bold mb-4">Start a new discussion</h2>
                    
                    <form asp-controller="Forum" asp-action="Create" method="post" enctype="multipart/form-data">
                        
                        <div class="mb-3">
                            <label asp-for="ThreadTitle" class="form-label fw-bold">Title</label>
                            <input asp-for="ThreadTitle" class="form-control form-control-lg" placeholder="What's on your mind?" autofocus />
                            <span asp-validation-for="ThreadTitle" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ThreadContent" class="form-label fw-bold">Content</label>
                            <textarea asp-for="ThreadContent" class="form-control" rows="6" placeholder="Share your thoughts..."></textarea>
                            <span asp-validation-for="ThreadContent" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label for="ImageFile" class="form-label fw-bold">Upload picture <span class="text-muted fw-normal small">(Optional)</span></label>
                            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="d-flex justify-content-end gap-2 align-items-center">
                            <a asp-action="Index" class="text-decoration-none text-muted me-2">Cancel</a>
                            
                            <button type="submit" class="btn btn-dark px-4 rounded-pill fw-bold">
                                <i class="bi bi-send-fill me-2"></i> Post Thread
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}