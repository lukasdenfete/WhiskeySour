@model WhiskeySour.Web.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            <div class="text-center mb-4">
                <h1 class="h3 mb-3 fw-normal">@ViewData["Title"]</h1>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">
                    
                    <form asp-action="Edit" method="post" enctype="multipart/form-data" asp-controller="Profile">
                        <input type="hidden" asp-for="UserId"/>
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="text-center mb-4">
                            <div class="mb-3 d-inline-block position-relative">
                                @if (Model.ProfilePicture != null)
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.ProfilePicture)"
                                         alt="Current profile picture" 
                                         class="rounded-circle border border-4 border-light shadow-sm" 
                                         style="height: 120px; width: 120px; object-fit: cover;"/>
                                }
                                else
                                {
                                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto border border-4 border-light shadow-sm" 
                                         style="height: 120px; width: 120px;">
                                        <i class="bi bi-person text-secondary fs-1"></i>
                                    </div>
                                }
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="ImageFile" class="form-label small text-muted">Change Profile Picture</label>
                                <input asp-for="ImageFile" type="file" class="form-control form-control-sm mx-auto" style="max-width: 300px;" accept="image/*" />
                                <span asp-validation-for="ImageFile" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4 text-muted">
                        
                        <h5 class="h6 text-muted mb-3">Personal Information</h5>

                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                    <label asp-for="FirstName">First Name</label>
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                    <label asp-for="LastName">Last Name</label>
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-dark px-4">Save Changes</button>
                        </div>
                    </form>
</div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}