@model WhiskeySour.Web.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="bg-dark text-white p-5 rounded-3 mb-5 position-relative overflow-hidden">
    <div style="position: absolute; top:0; left:0; width: 100%; height: 100%; background: linear-gradient(45deg, #1a1a1a, #2c3e50); z-index: 0;"></div>
    
    <div class="position-relative" style="z-index: 1;">
        <h1 class="display-4 fw-bold">Welcome to Whiskey Sour Carparts</h1>
        <p class="lead col-md-8">The ultimate destination for car enthusiasts. Find rare parts, discuss modifications, and connect with the community.</p>
        <hr class="my-4 bg-light opacity-25"> <div class="d-flex flex-wrap gap-3">
            <a class="btn btn-outline-info btn-lg px-4" asp-controller="Product" asp-action="Index">Go to Shop</a>
            <a class="btn btn-outline-light btn-lg px-4" asp-controller="Forum" asp-action="Index">Join the Discussion</a>
            
            @if (!Model.IsLoggedIn)
            {
                <a class="btn btn-outline-success fw-bold btn-lg px-4" asp-area="Identity" asp-page="/Account/Register">Sign Up Now</a>
            }
        </div>
    </div>
</div>

<div class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>New Arrivals</h3>
        <a asp-controller="Product" asp-action="Index" class="text-decoration-none">View all products <i class="bi bi-arrow-right"></i></a>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
        @foreach (var product in Model.LatestProducts)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0"> <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="text-decoration-none text-reset">
                        <div style="position: relative;">
                            @if (product.Image != null)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(product.Image)" 
                                     class="card-img-top" 
                                     style="height: 150px; object-fit: cover;" alt="@product.Name"/>
                            }
                            else
                            {
                                <img src="~/images/placeholder.jpeg" class="card-img-top" style="height: 150px; object-fit: cover;" alt="Placeholder"/>
                            }
                            <span class="badge bg-dark position-absolute top-0 end-0 m-2">@product.Price.ToString("C")</span>
                        </div>
                        <div class="card-body p-2">
                            <h6 class="card-title text-truncate">@product.Name</h6>
                            <small class="text-muted">@product.Category?.Name</small>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<div class="row g-5">
    
    <div class="col-lg-8">
        
        <ul class="nav nav-tabs mb-3 border-0" id="communityTab" role="tablist">
            <li class="nav-item">
                <button class="nav-link active text-dark border-0 bg-transparent fw-bold ps-0" id="latest-tab" data-bs-toggle="tab" data-bs-target="#latest" type="button">Latest Discussions</button>
            </li>
            @if (Model.IsLoggedIn)
            {
                <li class="nav-item">
                    <button class="nav-link text-muted border-0 bg-transparent" id="feed-tab" data-bs-toggle="tab" data-bs-target="#feed" type="button">From People You Follow</button>
                </li>
            }
        </ul>

        <div class="tab-content" id="communityTabContent">
            <div class="tab-pane fade show active" id="latest" role="tabpanel">
                <div class="list-group list-group-flush"> @foreach (var thread in Model.LatestThreads)
                    {
                        <a asp-controller="Forum" asp-action="Details" asp-route-id="@thread.Id" class="list-group-item list-group-item-action d-flex align-items-start gap-3 py-3 border-0 px-0">
                            @if (thread.CreatedBy?.ProfilePicture != null)
                            {
                                <img src="data:image/png;base64,@Convert.ToBase64String(thread.CreatedBy.ProfilePicture)" 
                                     class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="/images/default-profilbild.png" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                            }
                            
                            <div class="w-100">
                                <div class="d-flex justify-content-between">
                                    <h6 class="mb-1 fw-bold">@thread.Title</h6>
                                    <small class="text-muted">@thread.Created.ToString("MMM dd")</small>
                                </div>
                                <p class="mb-1 small text-truncate" style="max-width: 500px;">@thread.Content</p>
                                <small class="text-muted">Posted by @thread.CreatedBy?.FirstName</small>
                            </div>
                        </a>
                    }
                </div>
            </div>

            @if (Model.IsLoggedIn)
            {
                <div class="tab-pane fade" id="feed" role="tabpanel">
                    @if (Model.Feed.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var thread in Model.Feed)
                            {
                                <a asp-controller="Forum" asp-action="Details" asp-route-id="@thread.Id" class="list-group-item list-group-item-action py-3 border-0 px-0">
                                    <h6 class="mb-1">@thread.Title</h6>
                                    <small class="text-muted">by @thread.CreatedBy?.FirstName @thread.CreatedBy?.LastName</small>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <p class="mb-0">No activity from people you follow yet.</p>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

 <div class="col-lg-4">
        <div class="p-4 bg-light rounded-3 shadow-sm">
            <h5 class="mb-3">Welcome New Users!</h5>
            <div class="d-flex flex-wrap gap-2">
                @foreach (var user in Model.NewUsers)
                {
                    @if (Model.IsLoggedIn)
                    {
                        <a asp-controller="Profile" asp-action="Details" asp-route-id="@user.Id" class="text-decoration-none" title="@user.FirstName @user.LastName">
                            @if (user.ProfilePicture != null)
                            {
                                <img src="data:image/png;base64,@Convert.ToBase64String(user.ProfilePicture)" 
                                     class="rounded-circle border border-2 border-white shadow-sm" 
                                     style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="/images/default-profilbild.png" 
                                     class="rounded-circle border border-2 border-white shadow-sm" 
                                     style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                        </a>
                    }
                    else
                    {
                        <div style="cursor: help;" title="Log in to view @user.FirstName's profile">
                            @if (user.ProfilePicture != null)
                            {
                                <img src="data:image/png;base64,@Convert.ToBase64String(user.ProfilePicture)" 
                                     class="rounded-circle border border-2 border-white shadow-sm opacity-75" 
                                     style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="/images/default-profilbild.png" 
                                     class="rounded-circle border border-2 border-white shadow-sm opacity-75" 
                                     style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                        </div>
                    }
                }
            </div>
            
            @if (!Model.IsLoggedIn)
            {
                <div class="mt-3 text-muted small">
                    <i class="bi bi-lock-fill"></i> <a asp-area="Identity" asp-page="/Account/Login">Log in to connect with members.</a> 
                </div>
            }
        </div>
    </div>
</div>