@using WhiskeySour.DataLayer;
@model IEnumerable<WhiskeySour.Web.ViewModels.ProductViewModel>
<h1 class="d-flex justify-content-center">Products</h1>
@if (User.IsInRole("Admin"))
{
    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-secondary" asp-controller="Product" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Add product 
        </a>
    </div>
}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
    @foreach (var productViewModel in Model)
    {
        <div class="col">
            <div class="card card-hover h-100 shadow-sm border-0">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@productViewModel.Product.ProductId" class="text-decoration-none text-reset">
                    <div style="position: relative;">
                        @if (productViewModel.Product.Image != null)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(productViewModel.Product.Image)" 
                                 class="card-img-top" 
                                 alt="@productViewModel.Product.Name"
                                 style="height: 180px; object-fit: cover;"/>
                        }
                        else
                        {
                            <img src="~/images/placeholder.jpeg" 
                                 class="card-img-top" 
                                 alt="No image available"
                                 style="height: 180px; object-fit: cover;"/>
                        }
                        
                        <div style="position: absolute; top: 10px; right: 10px;">
                            @if (productViewModel.Product.Quantity >= 3)
                            {
                                <span class="badge bg-success shadow-sm">In Stock</span>
                            }
                            else if (productViewModel.Product.Quantity < 3 && productViewModel.Product.Quantity > 0)
                            {
                                <span class="badge bg-warning text-dark shadow-sm">Few Left</span>
                            }
                            else
                            {
                                <span class="badge bg-danger shadow-sm">Out of Stock</span>
                            }
                        </div>
                    </div>
                </a>

                <div class="card-body d-flex flex-column p-3">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@productViewModel.Product.ProductId" class="text-decoration-none text-reset">
                        <h6 class="card-title fw-bold mb-1 text-truncate" title="@productViewModel.Product.Name">
                            @productViewModel.Product.Name
                        </h6>
                        <p class="card-text small text-muted text-truncate mb-3">
                            @productViewModel.Product.Description
                        </p>
                    </a>
                    
                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <span class="fw-bold fs-5">
                            @productViewModel.Product.Price.ToString("C")
                        </span>

                        @if (productViewModel.Product.Quantity > 0)
                        {
                            <form asp-controller="Cart" asp-action="Add" method="post">
                                <input type="hidden" name="productId" value="@productViewModel.Product.ProductId" /> 
                                <button type="submit" class="btn btn-outline-dark" title="Add to cart">
                                    <i class="bi bi-cart-plus fs-5"></i>
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-light text-muted border-0" disabled>
                                <i class="bi bi-cart-x fs-5"></i>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

