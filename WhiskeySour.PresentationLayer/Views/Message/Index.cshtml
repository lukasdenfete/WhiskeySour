@using System.Security.Claims
@model List<WhiskeySour.DataLayer.Message>

@{
    ViewData["Title"] = "Messages";
}
<h2>Conversations</h2>

@if (!Model.Any())
{
    <p>You have no conversations yet.</p>
}
else
{
    <ul class="list-group">
        @foreach (var msg in Model)
        {
            var partnerId = msg.SenderId == User.FindFirst(ClaimTypes.NameIdentifier).Value
                ? msg.ReceiverId
                : msg.SenderId;
            
            <a class="list-group-item list-group-item-action d-block mb-2" asp-controller="Message" 
               asp-action="Conversation" asp-route-id="@partnerId">
                <div>
                    <strong>@ViewBag.Partners[partnerId]: </strong>
                    <small>@msg.Content</small>
                </div>
            </a>
        }
    </ul>
}
