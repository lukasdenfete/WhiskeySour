@model WhiskeySour.Web.ViewModels.ProductViewModel


<div class="mt-4 position-relative">
    <div class="position-absolute" style="top: 10px; right: 10px;">
        <a class="btn btn-secondary" asp-controller="Product" asp-action="Index">Back to products</a>
    </div>
    <h2 class="text-center">Product Details</h2>
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-6 text-center">
            @if (Model.Product.Image != null && Model.Product.Image.Length > 0)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Product.Image)"
                     alt="Image of @Model.Product.Name"
                     class="img-fluid"
                     style="max-height: 400px; border: 1px solid #ddd; padding: 10px"/>
            }
            else
            {
                <p>No image available for this product</p>
            }
        </div>
        <div class="col-md-6">
            <dl class="row">
                <dd class="col-sm-9">@Model.Product.Name</dd>

                <dd class="col-sm-9">@Model.Product.Description</dd>

                <dd class="col-sm-9">@Model.Product.Price</dd>

                <dd class="col-sm-9">@Model.Product.Quantity</dd>

                <dd class="col-sm-9">@Model.Product.Category.Name</dd>
            </dl>
            <div class="mt-3">
                <a class="btn btn-danger" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Product.ProductId">Edit</a>
            </div>
        </div>
    </div>
</div>


